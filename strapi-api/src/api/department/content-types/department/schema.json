{
  "kind": "collectionType",
  "collectionName": "departments",
  "info": {
    "singularName": "department",
    "pluralName": "departments",
    "displayName": "Department"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "createdDepartmentAt": {
      "type": "datetime"
    },
    "updatedDepartmentAt": {
      "type": "datetime"
    },
    "todos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::todo.todo",
      "mappedBy": "department_id"
    },
    "todo_templates": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::todo-template.todo-template",
      "mappedBy": "department_id"
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "department_id"
    }
  }
}
